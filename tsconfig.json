{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true
  },
 "types": ["jest", "node", "minimatch"],
  
  "include": [
    "src",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.a11y.test.tsx"
  ],
  
}