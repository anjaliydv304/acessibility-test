{
  "name": "accessibility-test-poc",
  "version": "1.0.0",
  "description": "Accessibility testing POC with axe-core integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite --host",
    "start": "vite --host",
    "build": "npm run test:a11y && npm run build:lib",
    "build:lib": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:a11y": "jest --config=jest.a11y.config.cjs",
    "test:a11y:watch": "jest --config=jest.a11y.config.cjs --watch",
    "test:a11y:coverage": "jest --config=jest.a11y.config.cjs --coverage",
    "test:all": "npm run test && npm run test:a11y",
    "ci:test": "npm run test && npm run test:a11y",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "pre-commit": "npm run lint && npm run typecheck && npm run test:a11y",
    "clean": "rimraf dist",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.8.2",
    "@axe-core/react": "^4.8.2",
    "@babel/preset-react": "^7.27.1",
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.5.3",
    "@storybook/react": "^7.5.3",
    "@storybook/react-vite": "^7.5.3",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.7.0",
    "axe-core": "^4.8.2",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "lint-staged": "^15.0.2",
    "rimraf": "^5.0.5",
    "storybook": "^7.5.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.4.19"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "npm run test:a11y"
    ]
  },
  "keywords": [
    "accessibility",
    "a11y",
    "axe-core",
    "react",
    "component-library",
    "testing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "files": [
    "dist"
  ]
}
